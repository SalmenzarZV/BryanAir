<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNameBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSurnameBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvApellidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameBuy" />

    <TextView
        android:id="@+id/tvDepartureBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etDeparture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSurnameBuy" />

    <TextView
        android:id="@+id/tvDestinationBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/etDestination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartureBuy" />
</androidx.constraintlayout.widget.ConstraintLayout>